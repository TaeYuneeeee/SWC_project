<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Spinner
        android:id="@+id/spn_birth"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:entries="@array/birth"
        tools:ignore="MissingConstraints">
    </Spinner>
    <Spinner
        android:id="@+id/spn_address"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:entries="@array/address"
        tools:ignore="MissingConstraints">
    </Spinner>
    <Spinner
        android:id="@+id/spn_school"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:entries="@array/school"
        tools:ignore="MissingConstraints">
    </Spinner>
    <Spinner
        android:id="@+id/spn_subject"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:entries="@array/subject"
        tools:ignore="MissingConstraints">
    </Spinner>
    <EditText
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:hint="별명을 설정해주세요."
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text4"/>
    </LinearLayout>
</LinearLayout>